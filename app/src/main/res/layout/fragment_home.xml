<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="io.alelli.simplehome2.HomeFragment"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/luci_nav"
        android:id="@+id/button_luci"
        android:layout_gravity="left|top"
        android:backgroundTint="@color/accent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temperature_nav"
        android:id="@+id/button_temperature"
        android:backgroundTint="@color/accent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/allarme_nav"
        android:id="@+id/button_allarme"
        android:backgroundTint="@color/accent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_nav"
        android:id="@+id/button_settings"
        android:backgroundTint="@color/accent" />

</LinearLayout>
